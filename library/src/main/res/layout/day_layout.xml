<?xml version="1.0" encoding="utf-8"?>

<com.github.gfranks.collapsible.calendar.widget.DayView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_indicator"
    android:gravity="center"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:textSize="18sp">

    <TextView
        android:id="@+id/day_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/day_view_indicator"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"/>

</com.github.gfranks.collapsible.calendar.widget.DayView>